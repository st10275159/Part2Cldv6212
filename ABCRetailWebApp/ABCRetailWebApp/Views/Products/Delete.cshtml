@{
}
@model ABCRetailWebApp.Models.ProductInfo

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <h1>Delete Product</h1>
    <hr />

    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this product?</h4>
        <p>This action cannot be undone.</p>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Product Details</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Product Name:</dt>
                <dd class="col-sm-9"><strong>@Model.ProductName</strong></dd>

                <dt class="col-sm-3">Description:</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Price:</dt>
                <dd class="col-sm-9">R @Model.Price.ToString("N2")</dd>

                <dt class="col-sm-3">Stock Quantity:</dt>
                <dd class="col-sm-9">@Model.StockQuantity units</dd>

                <dt class="col-sm-3">Category:</dt>
                <dd class="col-sm-9">@Model.Category</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="PartitionKey" />
        <input type="hidden" asp-for="RowKey" />

        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Confirm Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Cancel
        </a>
    </form>
</div>